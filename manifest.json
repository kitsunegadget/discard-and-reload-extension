{
  "manifest_version": 3,
  "name": "Discard and Reload Extension",
  "version": "2.0",
  "description": "表示しているタブを discard して再読み込みします。",
  "icons": {
    "16": "icon128.png",
    "48": "icon128.png",
    "128": "icon128.png"
  },
  "author": "Kitsune Gadget",
  "background": {
    "service_worker": "sw.js"
  },
  "action": {
    "default_icon": {},
    "default_title": "現在のタブを discard して再読み込みします"
  },
  "permissions": ["activeTab", "notifications", "scripting", "alarms"],
  "host_permissions": ["<all_urls>"]
}
